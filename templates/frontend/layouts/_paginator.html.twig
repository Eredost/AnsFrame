{# Paginator #}
<div class="paginator">

    {# Previous Button #}
    <a
        {% if currentPage > 1 %}
            href="{{ path(app.request.get('_route'), {'page': currentPage - 1}|merge(options ?? [])) }}"
            class="paginator__previous"
        {% else %}
            class="paginator__previous disabled"
        {% endif %}
    >
        << Previous
    </a>
    {# Previous Button #}

    {% if currentPage > 2 %}
        <a
                href="{{ path(app.request.get('_route'), {'page': 1}|merge(options ?? [])) }}"
                class="paginator__page">
            1
        </a>

        <div
            class="paginator__page seperator">
            ...
        </div>
    {% endif %}

    {% if currentPage > 1 %}
        <a
            href="{{ path(app.request.get('_route'), {'page': currentPage - 1}|merge(options ?? [])) }}"
            class="paginator__page"
        >
            {{ currentPage - 1 }}
        </a>
    {% endif %}

    <a
        href="{{ path(app.request.get('_route'), {'page': currentPage}|merge(options ?? [])) }}"
        class="paginator__page active">
        {{ currentPage }}
    </a>

    {% for i in 1..2 %}
        {% if (currentPage + i) <= lastPage %}
            <a
                href="{{ path(app.request.get('_route'), {'page': currentPage + i}|merge(options ?? [])) }}"
                class="paginator__page">
                {{ currentPage + i }}
            </a>
        {% endif %}
    {% endfor %}

    {% if (currentPage + 3) <= lastPage %}
        <div
            class="paginator__page seperator">
            ...
        </div>

        <a
            href="{{ path(app.request.get('_route'), {'page': lastPage}|merge(options ?? [])) }}"
            class="paginator__page">
            {{ lastPage }}
        </a>
    {% endif %}

    {# Next Button #}
    <a
        {% if currentPage != lastPage %}
            href="{{ path(app.request.get('_route'), {'page': currentPage + 1}|merge(options ?? [])) }}"
            class="paginator__next"
        {% else %}
            class="paginator__next disabled"
        {% endif %}
    >
        Next >>
    </a>
    {# Next Button #}

</div>
{# Paginator #}
