<!-- Question Card -->
<div class="question-card">

    <!-- Card Head -->
    <div class="question-card__head">

        <h3 class="head__title">
            <a href="#">
                {{ question.title }}
            </a>
        </h3>

        <div class="head__tags">
            {% include('frontend/layouts/_tag.html.twig') %}
        </div>
    </div>
    <!-- Card Head -->

    <!--Card Excerpt -->
    <div class="question-card__excerpt">
        <p class="excerpt__content">
            {{ question.content|truncate(300, '...') }}
        </p>
    </div>
    <!--Card Excerpt -->

</div>
<!-- Question Card -->
