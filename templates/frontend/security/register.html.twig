{% set contentFullWidth = true %}

{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}

    <h2 class="title title--big">Create a new account</h2>

    <div class="form">
        {{ form_start(registerForm) }}

        {# Firstname field #}
        <div class="form--row row--half
            {% if not registerForm.firstname.vars.valid %}has-error{% endif %}
        ">
            {{ form_label(registerForm.firstname, null, {
                'attr': {
                    'class': 'form__label'
                }
            }) }}

            {{ form_errors(registerForm.firstname, {
                'attr': {
                    'class': 'form__error'
                }
            }) }}

            {{ form_widget(registerForm.firstname, {
                'attr': {
                    'class': 'form__widget',
                    'placeholder': 'Firstname'
                }
            }) }}
        </div>
        {# Firstname field #}

        {# Lastname field #}
        <div class="form--row row--half
                {% if not registerForm.lastname.vars.valid %}has-error{% endif %}
            ">
            {{ form_label(registerForm.lastname, null, {
                'attr': {
                    'class': 'form__label'
                }
            }) }}

            {{ form_errors(registerForm.lastname, {
                'attr': {
                    'class': 'form__error'
                }
            }) }}

            {{ form_widget(registerForm.lastname, {
                'attr': {
                    'class': 'form__widget',
                    'placeholder': 'Lastname'
                }
            }) }}
        </div>
        {# Lastname field #}

        {# Username field #}
        <div class="form--row
                {% if not registerForm.username.vars.valid %}has-error{% endif %}
            ">
            {{ form_label(registerForm.username, null, {
                'attr': {
                    'class': 'form__label required'
                }
            }) }}

            {{ form_errors(registerForm.username, {
                'attr': {
                    'class': 'form__error'
                }
            }) }}

            {{ form_widget(registerForm.username, {
                'attr': {
                    'class': 'form__widget',
                    'placeholder': 'Naigito'
                }
            }) }}
        </div>
        {# Username field #}

        {# Password field #}
        <div class="form--row
                {% if not registerForm.plainPassword.vars.valid %}has-error{% endif %}
            ">
            {{ form_label(registerForm.plainPassword, null, {
                'attr': {
                    'class': 'form__label required'
                }
            }) }}

            {{ form_errors(registerForm.plainPassword, {
                'attr': {
                    'class': 'form__error'
                }
            }) }}

            {{ form_widget(registerForm.plainPassword, {
                'attr': {
                    'class': 'form__widget',
                    'placeholder': '***********'
                }
            }) }}
        </div>
        {# Password field #}

        {# TermsAgree field #}
        <div class="form--row
                {% if not registerForm.agreeTerms.vars.valid %}has-error{% endif %}
            ">
            {{ form_widget(registerForm.agreeTerms, {
                'attr': {
                    'class': 'form__widget'
                }
            }) }}

            <label for="{{ registerForm.agreeTerms.vars.id }}" class="form__label required">
                {{ registerForm.agreeTerms.vars.label|raw }}
            </label>

            {{ form_errors(registerForm.agreeTerms, {
                'attr': {
                    'class': 'form__error'
                }
            }) }}
        </div>
        {# TermsAgree field #}

        <input type="submit" value="Create account">

        {{ form_end(registerForm) }}
    </div>

{% endblock %}
