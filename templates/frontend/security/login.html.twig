{% set contentFullWidth = true %}

{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<div class="form">

    <h2 class="title title--big">Please sign in</h2>

<form method="post">

    <div class="form--row">
        <label for="inputUsername">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    </div>

    <div class="form--row">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="form--row">
        <label for="_remember_me" class="form__label form__checkbox">
            Remember me
            <input type="checkbox" name="_remember_me" id="_remember_me" class="form__widget">
            <span class="checkmark"></span>
        </label>
    </div>

    {% if error %}
        <div class="error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="form--row">
        <input type="submit" value="Sign in" class="form__submit">
    </div>

</form>
</div>
{% endblock %}
