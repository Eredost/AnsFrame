{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}

    {% include('frontend/layouts/_question-show.html.twig') with {
        'question': question
    } only %}

    {% for answer in answers %}
        {% include('frontend/layouts/_answer-show.html.twig') with {
            'answer': answer
        } only %}
    {% endfor %}

    {% if answers.lastPage > 1 %}
        {% include('frontend/layouts/_paginator.html.twig') with {
            'currentPage': answers.currentPage,
            'lastPage': answers.lastPage,
            'options': {
                'questionId': question.id
            }
        } only %}
    {% endif %}

{% endblock %}
