<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} - AnsFrame</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% include('layouts/_header.html.twig') %}
        {% endblock %}

        <div class="wrapper">

            <div class="wrapper__content
                {% if contentFullWidth is not defined %}
                    wrapper--three-quarters
                {% else %}
                    wrapper--full
                {% endif %}
            ">
                {% block body %}{% endblock %}
            </div>

            {% if contentFullWidth is not defined %}
                <div class="wrapper__sidebar wrapper--quarter">
                    {% block sidebar %}
                        {% include('layouts/_sidebar.html.twig') %}
                    {% endblock %}
                </div>
            {% endif %}
        </div>

        {% block footer %}
            {% include('layouts/_footer.html.twig') %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
